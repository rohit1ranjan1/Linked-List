#include<iostream>
using namespace std;
struct Node{
    int data;
    struct Node* next;
};
struct Node* head;
void insert(int data){
    Node* temp1=new Node();
    temp1->data=data;
    Node* temp2=head;
if(temp2==nullptr){
head=temp1;
temp1->next=nullptr;
return;
}
    while(temp2->next!=NULL){
        temp2=temp2->next;
    }
    temp2->next=temp1;
    temp1->next=NULL;
}
void print(){
    Node* temp=head;
    cout<<"List is: ";
    while(temp!=NULL){
        cout<<temp->data<<" ";
        temp=temp->next;
    }
    cout<<endl;
}
void rem(int n){
    struct Node* temp1=head;
    int i;
        if(n==1){
            head=temp1->next;
            delete(temp1);
            return;
        }
        for(i=0;i<n-2;i++)
        temp1=temp1->next;
        
        struct Node* temp2= temp1->next;
        temp1->next=temp2->next;
        delete temp2;
}
int main(){
    head=NULL;
    insert(2);
    insert(3);
    insert(4);
    insert(5);
    insert(6);
    print();
    int n;
    cout<<"Enter the position";
    cin>>n;
    rem(n);
    print();
}

/*
List is: 2 3 4 5 6 
Enter the position: 1
List is: 3 4 5 6 
*/
